<div class="banner mb-3" style="height: 300px; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key %>); background-size: cover; background-position: center;">
  <div class="p-5">
    <h1 class="text-white">List "<%= @list.name %>"</h1>
    <h3 class="text-white">of <%= @list.bookmarks.count %> movie(s)</h3>
  </div>
</div>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product mb-3">
      <%= image_tag bookmark.movie.poster_url, width: 200 %>
      <div style="position: absolute; right: 200px"><em><%= bookmark.comment%><em></div>
          <div class="card-product-infos" style="position: relative;">
            <h2><%= bookmark.movie.title%></h2>
            <p><%= bookmark.movie.overview%></p>
            <p>Rating: <%= bookmark.movie.rating%> / 10</p>
            <p>
              <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
