<h1>Lists#<%= @list.name %></h1>

<div class="container">
<ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <ul>
        <li>Comment: <%= bookmark.comment%></li>
        <li>Title: <%= bookmark.movie.title%></li>
        <li>Description: <%= bookmark.movie.overview%></li>
        <li><%= image_tag bookmark.movie.poster_url, width: 200 %></li>
        <li>Rating: <%= bookmark.movie.rating%> / 10</li>
        <li><%= link_to "X", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></li>
      </ul>
    <% end %>
  </ul>
  <p><%= link_to "Back to lists", lists_path %></p>
  <p><%= link_to "Add a bookmark", new_list_bookmark_path(@list) %></p>
</div>
