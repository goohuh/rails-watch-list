<div class="container">
  <div class="p-5">
    <h1>My lists</h1>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
        <%= link_to list_path(list), style: 'text-decoration: none', class: "text-white" do %>
          <div style="text-align: center; vertical-align: middle; display: table-cell; height: 50px;">
            <%= list.name %>
            <div style="position: relative; bottom: 80px; left: 185px;">
              <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
                <i class="fa-solid fa-trash text-white"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
